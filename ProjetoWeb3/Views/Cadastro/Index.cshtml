@model IEnumerable<ProjetoImg.Models.Cad_cliente>

@{
    ViewData["Title"] = "Lista de clientes";
}

<h1>Clientes cadastrados</h1>

<p>
    <a class="btn btn-dark" asp-action="Create">Cadastrar cliente</a>
</p>


<div class="cards-container">
    @foreach (var item in Model)
    {
        <div class="card">
            <div class="card-content">

                <img src="data:image/png;base64,@Convert.ToBase64String(item.Foto)"
                     alt="Foto de @item.Nome"
                     class="card-image"
                     style="width: 50px; height: 50px; border-radius: 50%;" />

                <h2>@item.Nome</h2>
                <p><strong>Email:</strong> @item.Email</p>
                <div class="card-buttons">
                    <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.ID">Editar</a>
                    <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.ID">Detalhes</a>
                    <a class="btn btn-danger text-white btn-sm" asp-action="Delete" asp-route-id="@item.ID">Deletar</a>
                </div>
            </div>
        </div>
    }
</div>
