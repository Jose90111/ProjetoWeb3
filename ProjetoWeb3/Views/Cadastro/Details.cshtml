@model ProjetoImg.Models.Cad_cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">

    <dt class="col-sm-2">Foto</dt>
    <dd class="col-sm-10">
        @if (Model.Foto != null)
        {
            <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" alt="Foto do Cliente" class="img-thumbnail" style="max-width: 200px;" />
        }
        else
        {
            <span>Sem imagem disponível</span>
        }
    </dd>

    <dt class="col-sm-2">Nome</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Nome)</dd>

    <dt class="col-sm-2">CPF</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.CPF)</dd>

    <dt class="col-sm-2">E-mail</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

    <dt class="col-sm-2">Data de Nascimento</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.DataNascimento)</dd>

    <dt class="col-sm-2">Sexo</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Sexo)</dd>

    <dt class="col-sm-2">Endereço</dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Logradouro),
        @Html.DisplayFor(model => model.Numero),
        @Html.DisplayFor(model => model.Complemento)<br />
        Bairro: @Html.DisplayFor(model => model.Bairro)<br />
        Cidade: @Html.DisplayFor(model => model.Cidade),
        @Html.DisplayFor(model => model.Estado)<br />
        CEP: @Html.DisplayFor(model => model.CEP)
    </dd>
</dl>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary">Voltar</a>
</div>